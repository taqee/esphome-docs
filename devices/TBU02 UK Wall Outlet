esphome:
  name: bedroom-tv-socket
  platform: ESP8266
  board: esp01_1m
  esp8266_restore_from_flash: true

# Enable logging
logger:

# Enable Home Assistant API
api:

ota:

web_server:
  port: 80
  
wifi:
  ssid: !secret wifi_ssid
  password: !secret wifi_password

  # Enable fallback hotspot (captive portal) in case wifi connection fails
  ap:
    ssid: "Bedroom-Tv-Socket"
    password: "taqee2010"

captive_portal:

switch:
  - platform: gpio
    name: "Right"
    pin: GPIO12
    id: relay1
  - platform: gpio
    name: "Left"
    pin: GPIO13
    id: relay2
  - platform: gpio
    name: "USB"
    pin: GPIO14

binary_sensor:
  - platform: gpio
    pin:
      number: GPIO5
      inverted: true
    id: left_outlet_button
    on_press:
      - switch.toggle: relay1
  - platform: gpio
    pin:
      number: GPIO16
      inverted: true
    id: right_outlet_button
    on_press:
      - switch.toggle: relay2
      
interval:
  - interval: 1s
    then:
      if:
        condition:
          wifi.connected:
        then:
          - output.turn_on: blue_led
        else:
          - output.turn_on: blue_led
          - delay: 200ms
          - output.turn_off: blue_led  
      
output:
  # Register the blue LED as a dimmable output ....
  - platform: gpio
    id: blue_led
    pin: GPIO4
    inverted: true      
      

      
      
      
      
      
      
      
